<template name="wheel" >
  <view class="wheel_wp">
  	<block	wx:if = "{{mode == 1}}">
	    <image src = "{{bgImg}}"/>
	    <view class="wheel_pointer" style="-webkit-transform:rotate({{deg}}deg) translateZ(0);transform:rotate({{deg}}deg) translateZ(0)" bindtap="start"><image src = "{{pointerImg}}" /></view>
	</block>
	<block	wx:if = "{{mode == 2}}">
	    <image src = "{{bgImg}}" style="-webkit-transform:rotate({{deg}}deg) translateZ(0);transform:rotate({{ deg}}deg) translateZ(0)"/>
	    <view class="wheel_pointer" bindtap="start"><image src = "{{pointerImg}}" /></view>		
	</block>
  </view>
</template> 