/* comment.wxss */
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
}
.type-box{
    width:33.3333333333%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    border-bottom: 4rpx solid #e64340;
}
.goods-container{
    margin: 20rpx 0;
    background-color: #fff;
}
.goods-box{
    position: relative;
    padding: 20rpx 30rpx 0;
    font-size: 28rpx;
    clear: both;  
}
.goods-img{
    float:left; 
    height: 100rpx;
    width: 100rpx;
}
.goods-desc{
    float:left;
    width: 570rpx;
    margin-left: 20rpx;
}
.goods-name{
    height: 44rpx;
    line-height: 44rpx;
    overflow: hidden;
}
.buy-time{
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #b3b3b3;
}
.comment-button{
    font-size: 30rpx;
    color: #f23030;
    float: right; 
    padding: 8rpx 10rpx;
    border: 1rpx #f23030 solid; 
    margin-bottom: 20rpx;
}
.change-order{
    color: #c2c2c2;
    border: 1rpx #c2c2c2 solid; 
}
.button-icon{
    height: 26rpx;
    width: 26rpx;
}
