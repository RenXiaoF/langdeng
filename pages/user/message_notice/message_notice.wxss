/* message_notice.wxss */
.type-navbar{
    white-space: nowrap;
    display: flex;
    width: 100%;
    height:80rpx;
    background-color: #fff;
}
.type-box{
    width:33.3333333333%;
    box-sizing: border-box;
    font-size: 28rpx;
    line-height: 76rpx;
    padding: 0 20rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}
.type-navbar-item{
    border-bottom: 4rpx solid #fff;
}
.type-item-on{
    border-bottom: 4rpx solid #e64340;
}
.msg-box{
    background-color: white;
    padding: 20rpx 30rpx;
    border-bottom: 2px solid #f8f8f8;
    font-size: 30rpx;
}
.msg-time{
    padding: 10rpx 0;
}