/* index.wxss */
.banner{
    height:300rpx;
}
.shops-item{
    padding:20rpx 30rpx;
    background-color: #fff;
}
.shops-info{
    display: flex;
    height: 160rpx;
}
.shops-pic{
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    border: 1px solid #eee; 
}
.shops-mes{
    width: 380rpx;
    height: 124rpx;
    padding-top: 30rpx;
    overflow:hidden;
}
.shops-mes>view{
    height: 36rpx;
    line-height:36rpx;
}
.shops-name{
    font-size: 28rpx;
    color: #333;
}
.shops-des{
    font-size: 24rpx;
    color: #666;
}
.follow-dtns{
    width: 90rpx;
    height: 50rpx;
    font-size: 24rpx;
    color: #e23435;
    line-height: 50rpx;
    text-align: center;
    border: 1px solid #e23435;
    border-radius:5rpx;
    margin-left:40rpx;
    margin-top: 30rpx;
}
.is-focus{
    color: white;
    border: 0;
    background-color: #ccc;
}
.goods-num-list{
    height: 100rpx;
    display: flex;
}
.goods-num-item{
    width: 33.33%;
    text-align: center;
}
.goods-num{
    height: 72rpx;
    line-height: 72rpx;
    font-size: 36rpx;
}
.num-item-title{
    font-size: 24rpx;
    line-height: 1;
    color: #666;
}
.goods-list-title{
    margin-top: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-bottom: 10rpx;
}
.goods-list{
    display: flex;
    justify-content:space-between;
    flex-wrap: wrap;
}
.goods-item{
    width: 370rpx;
    padding-bottom: 20rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
}
.goods-pic{
    width: 370rpx;
    height: 370rpx;
}
.goods-name{
    width: 350rpx;
    height: 64rpx;
    margin:10rpx 0;
    padding: 0 10rpx;
    font-size: 26rpx;
    line-height: 32rpx;
}
.goods-price{
    font-size: 28rpx;
    line-height: 1;
    padding: 0 10rpx;
    color: #e23435;
}
.more-btn{
    height: 32rpx;
    padding: 34rpx 30rpx;
    text-align: right;
    background-color: #fff;
    font-size: 28rpx;
    line-height: 32rpx;
}
.arrow-right{
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    color: #fff;
    background-color: #e23435;
    text-align: center;
    border-radius:6rpx;
}
.store-mes{
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background-color: #fff;
    border-top:1px solid #eee;
}   
.store-mes>view{
    width: 374rpx;
    font-size: 30rpx;
}
.store-btn{
    border-right:1px solid #eee; 
}
