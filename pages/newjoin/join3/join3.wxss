@import "../../../utils/template/newjoin.wxss";
page{
    color: #666;
}
.notice{
    padding: 10rpx 30rpx;
    font-size: 24rpx;
    background-color: #FDFBE4;
}
.pic-list{
    padding:20rpx 30rpx 20rpx;
    margin-bottom: 20rpx;
}
.share-pic{
    width: 150rpx;
    height: 150rpx;
    border: 1px solid #ddd;
    overflow: hidden;
}
.item{
    float: left;
    padding: 0 30rpx; 
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
    border-bottom: 1rpx #f5f5f5 solid;
    line-height: 80rpx;
    position: relative;
    background-color: white;
}
.item-name{
    float: left;
}
.item-input{
    float: left;
    height: 80rpx;
    width: 450rpx;
    margin-left: 20rpx;
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-right{
    position: absolute;
    right: 30rpx;
}
.item-desc{
    display: inline-block;
    width: 100%;
    box-sizing:border-box;
    font-size: 24rpx;
    line-height: 28rpx;
    background-color: #EEF2F3;
    padding: 10rpx;
}
.arrow{
    width: 24rpx;
    height: 24rpx;
}
switch .wx-switch-input{
    height: 42rpx;
    border-radius: 4rpx;
}
switch .wx-switch-input::before,switch .wx-switch-input::after{
    height: 40rpx;
    border-radius: 4rpx;
}
.next-btn{
    float: left;
    background-color: #EC5151;
    color: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
    width: 700rpx;
    margin: 24rpx 25rpx 0;
    font-size: 24rpx;
    height: 70rpx;
    line-height: 70rpx;
}