/* pages/intefral_mall/intefral_mall/intefral_mall.wxss */
page{
    width: 100%;
    background-color: white;
}
.container {
    background-color: white;
}
.search-box{
    display: flex;
    width: 100%;
    height: 100rpx;
    z-index: 10;
    background-color: #10193a;
}
.search-inner{
    align-items: center;
    padding: 20rpx;
    margin:0rpx 20rpx;
    width:500rpx;
    height: 58rpx;
    background-color: #3c4359;
}
.search-cont{
    /* border: red 1px solid; */
    justify-content: center;
    height: 58rpx;
    width:536rpx;
    padding-left: 12rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    color: #666;
}
.images{
    display: flex;
}
.image{
    width: 35px;
    height: 25px;
    display: inline-block;
    padding: 25rpx 10rpx;
}
.images-text{
    color: white;
    padding: 27rpx 5rpx;
}
.nav-item{
    float: left;
    width: 25%;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    border-bottom: 1px solid #f8f8f8;
    background-color: #fff;
}
.nav-item .ico-dg{
    width: 18rpx;
    height: 12rpx;
    margin-left: 10rpx;
    line-height: 0;
}
.nav-item .ico-filter{
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
    line-height: 0;
}
.ico-dir{
    width: 16rpx;
    height: 22rpx;
    margin-left: 10rpx;  
    background-repeat: no-repeat;
    background-size: cover;
    background-position-x: 0;
}
.ico-dir-dn {
    background-position-x: -16rpx;
}
.ico-dir-up {
    background-position-x: -32rpx;
}
.search{
    width: 10%
}
.search-img{
    width: 30rpx;
    height: 30rpx;
}
.choice_list{
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-between;
}
.choice_item{
    width: 48%;
    font-size: 28rpx;
    margin-bottom: 30rpx;
}
.img-wrap image{
    width: 100%;
    height: 100%;
}
.item-cont{
    border-bottom: 1px solid #666;
    margin-bottom: 5rpx;
    display: flex;
    text-align: center;
    justify-content: center;

}
.item-cont .title{
    padding-right: 10rpx;
    line-height: 36rpx;
    color: #333;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    display: -webkit-box;
    text-overflow: ellipsis;
    width: 50%;

}
.price{
    /* display: inline-block; */
    /* color: #f23030; */
    /* padding-bottom: 20rpx; */
    line-height: 36rpx;
    height: 36rpx;
}
.comment{
    display: inline-block;
    font-size: 25rpx;
    margin-left: 15rpx;
}

/* 弹框相关 */
.filter-modal{
    position: fixed;
    left: 150rpx;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 20;
    background-color: white;
    overflow-x: hidden;
    padding-bottom: 30rpx;
}
.filter-box{
    box-sizing: border-box;
    width: 100%;
    font-size: 28rpx;
    padding: 20rpx;
}
.filter-name{
    width: 100%;
    padding: 20rpx 0;
    word-break: keep-all;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 30rpx;
}
.filter-items{
    width: 100%;
}
.filter-item{
    float: left;
    width: fit-content;
    max-width: 500rpx;
    word-break: keep-all;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 10rpx;
    border-radius: 10rpx;
    border: 1rpx #ddd solid;
    margin: 0 10rpx 10rpx 0;
    background-color: #fdfdfd;
    color: #666;
}
.viewall-btn{
    margin-top: 20rpx;
    width: 300rpx;
}
/*置顶按钮*/
.toTop{
    position: fixed;
    z-index: 3;
    right: 20rpx;
    bottom: 160rpx;
    width: 68rpx;
    height: 68rpx;
    border:4px solid #10193a;
    border-radius: 50%;
    overflow: hidden;
    cursor: pointer;
}
