page{
    background-color: white;
}
.title-tips{
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    font-size:24rpx;
    line-height: 42rpx;
    color: #777;
}
.input-wrap{
    height: 48rpx;
    width: 680rpx;
    border: 1px solid #ddd;
    display: flex;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #444;
    margin-bottom: 20rpx;
}
.input-title{
    width: 150rpx;
    border-right: 1px solid #ddd;
    text-align: center;
}
.input-wrap>input{
    width:488rpx;
    padding: 0 20rpx;
    height: 48rpx;
}
.careful-wrap{
    padding-bottom: 20rpx;
    border-bottom: 1px solid #ddd;
    margin-bottom: 20rpx;
}
.careful-tips{
    font-size: 24rpx;
    line-height: 36rpx;
    color: #ff6633;
    margin-bottom: 10rpx;
}
.goods-wrap{
    height: 180rpx;
    display: flex;
    margin-bottom: 20rpx;
}
.goods-pic{
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}
.goods-cont{
    width: 480rpx;
    color: #444;
}
.goods-name{
    font-size: 28rpx;
    line-height: 1;
    margin-bottom: 20rpx;
}
.goods-des{
    font-size: 24rpx;
    line-height: 1;
    margin-bottom: 20rpx;
}
.goods-count{
    font-size: 30rpx;
    line-height: 1;
    display: flex;
    justify-content: space-between;
    color: #f23030;
}
.pay-for{
    width: 100%;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    font-size: 28rpx;
    color: #666;
    background-color:#f0f2f5;
}
.pay-for .pay-btn{
    float: right;
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #f23030;
    color: #fff;
    border-radius:0;
}
.pay-for .consumer{
    float: right;
    margin-right: 20rpx;
    margin-top: 25rpx;
    line-height: 50rpx;
}